# Copy to ven.env and fill with your own values. Do NOT commit ven.env.

# News API (GNews or similar)
NEWS_API_KEY=
NEWS_API_URL=https://gnews.io/api/v4/top-headlines
NEWS_LANG=en
NEWS_COUNTRY=us
NEWS_MAX=10

# Supabase
SUPABASE_URL=
# Public client key for browser use only (optional if you inject it into index.html)
SUPABASE_ANON_KEY=
# Service role key (server-side only; NEVER expose client-side)
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_TABLE=daily_digests

# Local LLM
OLLAMA_MODEL=gemma3:4b

# SMTP (optional for email delivery)
SMTP_HOST=
SMTP_PORT=465
SMTP_USER=
SMTP_PASS=
SMTP_SENDER=
SMTP_TO=

# Gmail legacy (unused if SMTP above is configured)
GMAIL_USER=
GMAIL_PASS=
